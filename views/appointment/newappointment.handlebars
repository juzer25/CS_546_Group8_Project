<div>
<form action="appointment" method="POST">
<h2>Create a new appointment</h2>
{{#if error}}
    <p>{{error}}</p>
{{/if}}
    <div class="inputs">
        <div class="group">
            <input type="username" id="userName" name="Username"  value="{{userName}}" readonly>
            <span class="bar"></span>
            <label for="userName">USERNAME</label>
	    </div>
        <div class="group">
            <input type="email" name="email" id="email"  value="{{email}}">
            <span class="bar"></span>
            <label for="email">EmailId</label>
	    </div>
        <div class="group">
            <input type="date" id="date" name="Date" >
            <span class="bar"></span>
            <label for="date">APPOINTMENT DATE</label>
	    </div>
        <div class="group">
            <input type="text" id="queries" name="Querise" >
            <span class="bar"></span>
            <label for="queries">QUERIES</label>
	    </div>
        <div class="group">
            <label>REQUEST TYPE</label>
            <br>
            <span class="bar">
                <select name="RequestType">  
                <option value="TechnicalIssue">Technical Issue</option>
                <option value="NewAppointment">New Appointment</option>
                <option value="Others">Others</option>
                </select>
            </span>
        </div>
        
    </div>
    <div>
        <input id="reg" type="submit" value="Submit"> 
    </div>
</form>
</div>
