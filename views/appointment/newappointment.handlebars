<div>
<form action="appointment" method="POST">
<h2>Create a new appointment</h2>
{{#if error}}
    <p>{{error}}</p>
{{/if}}
    <div class="inputs">
        <div class="group">
            <input type="username" name="Username" >
            <span class="bar"></span>
            <label>USERNAME</label>
	    </div>
        <div class="group">
            <input type="date" name="Date" >
            <span class="bar"></span>
            <label>APPOINTMENT DATE</label>
	    </div>
        <div class="group">
            <input type="text" name="Querise" >
            <span class="bar"></span>
            <label>QUERISES</label>
	    </div>
        <div class="group">
            <label>REQUEST TYPE</label>
            <br>
            <span class="bar">
                <select name="RequestType">  
                <option value="TechnicalIssue">Technical Issue</option>
                <option value="NewAppointment">New Appointment</option>
                <option value="Others">Others</option>
                </select>
            </span>
        </div>
        
    </div>
    <div>
        <input id="reg" type="submit" value="Submit"> 
    </div>
</form>
</div>
