<h2 class="table_heading">Broadband Plans</h2>
<div style="width:100%;float:left">
	<table border="0">
        <tr>
            <th colspan="3">Plan Name</th>
            <th colspan="3">Cost</th>
            <th colspan="3">Validity</th>
            <th colspan="3">Limit</th>
            <th colspan="3">Discount</th>
            <th colspan="3"></th>
        </tr>
        {{#each broadbandList}}
        <tr>            
            <td colspan="3">{{this.planName}}</td>
            <td colspan="3">{{this.price}}</td>
            <td colspan="3">{{this.validity}}</td>
            <td colspan="3">{{this.limit}}</td>
            <td colspan="3">{{this.discount}}</td>
            <form method="post">
            <td colspan="3"><button type="submit" class="subs" id="reg" formaction="/broadband/subs/{{this.planName}}">Subscribe</button></td>
            <td colspan="3"><button type="submit" class="subs" formenctype="text/plain" formmethod="post" id="reg" formaction="/broadband/scrap/{{this.planName}}">Delete</button></td>
            </form><br><br>
        </tr>{{/each}}
    </table>
